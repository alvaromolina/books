<form method="GET" action="/books/search">
	Titulo:
	<input type="text" name="title">
	<input type="submit" value="search"> 
</form>
<br>
<table>
	<tr>
	<th>Titulo</th>
	<th>Descripcion</th>
	<th>Likes <th>
	<th> </th>
		</tr>
<% @books.each do |book| %>
	<tr>
		<td>	<%= book.title %>
		</td>
		<td>	<%= book.description %>
		</td>
		<td> <%= book.likes %> </td>
		<td> <a href="/books/like/<%=book.id%>" > Like </a> </td>
	</tr>
<% end %>
</table>